{
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "edge": "17",
            "firefox": "60",
            "chrome": "67",
            "safari": "11.1"
          },
          "useBuiltIns": "usage",
          "corejs": "3.6.5"
        }
      ]
    ],
    "plugins": [["module-resolver", {
        "root": ["."],
        "extensions": [
            ".ts",
            ".tsx",
            ".js",
            ".jsx",
            ".json",
            ".svg",
            ".jpg"
        ],
        "alias": {
            "@app": ["./src/app"],
            "@entities": "./src/entities",
            "@features": "./src/features",
            "@screens": "./src/screens",
            "@shared": "./src/shared",
            "@widgets": "./src/widgets"
        }
      }]]
  }